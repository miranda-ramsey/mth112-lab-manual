<!-- The docinfo block is the analogue to the latex preamble -->
<!-- This is where you can define macros and other book-wide -->
<!-- settings. -->
<docinfo xmlns:xi="http://www.w3.org/2001/XInclude">
  <!-- A unique name for the book in a catalog; for example, see https://pretextbook.org/catalog.html and https://runestone.academy/ns/books/index. It contains a simple lowercase string with no dashes or other special characters. See https://pretextbook.org/doc/guide/html/sec-publishing-to-runestone-academy.html for more information. -->
  <!-- A brief description for the book in a catalog; see the links above. The @shelf is used only when publishing to Runestone; see https://runestone.academy/ns/books/index for a list of valid values. You must copy these @shelf names exactly, including capitalization. -->

  <!-- The next three lines are likely for mature projects only: -->

  <!-- <brandlogo url="" source="images/cover.png"/> -->
  <!-- <covers front="images/front.pdf" back="images/back.pdf"/> -->
  <!-- <document-id>unique-book-id</document-id> -->

  <rename element="reading-questions">Reflection</rename>

  <!-- macros for defining latex math shortcuts. It is good practice -->
  <!-- to define these semantically, so that the macro relates to what-->
  <!-- it defines. -->
  <macros>
    \newcommand{\N}{\mathbb N}
    \newcommand{\Z}{\mathbb Z}
    \newcommand{\Q}{\mathbb Q}
    \newcommand{\R}{\mathbb R}
  </macros>

  <!-- If you put any latex-image elements you can include preambles -->
  <!-- for those in the next element. -->
  <latex-image-preamble> 
      <!-- Packages -->
      \usepackage{tikz, pgfplots}
      \usetikzlibrary{positioning,matrix,arrows}
      \usetikzlibrary{shapes,decorations,shadows,fadings,patterns}
      \usetikzlibrary{decorations.markings}
      \usetikzlibrary{arrows,arrows.meta}
      \pgfplotsset{framedaxes/.style={axis background/.style ={draw=black!75},axis x line=middle,axis y line=middle}}
      <!-- Colors -->
      \definecolor{first}{rgb}{0.08,0.08,0.8}
      \definecolor{second}{rgb}{0,.55,0.05}
      \definecolor{third}{rgb}{0.5,0.08,.7}
      \definecolor{fourth}{rgb}{0.9,0.1,0.9}
      \definecolor{fifth}{rgb}{1, 0.5, 0.1}
      <!-- Curve and Point Styles -->
      \pgfplotsset{firstcurve/.style       = {color=first,  mark=none, line width=1.5pt,  {Latex[length=3mm]}-{Latex[length=3mm]}, solid}}
      \pgfplotsset{secondcurve/.style      = {color=second, mark=none, line width=1.5pt,  {Latex[length=3mm]}-{Latex[length=3mm]}, solid}}
      \pgfplotsset{verticallinetest/.style = {color=fifth,  mark=none, line width=0.75pt, {Latex[length=3mm]}-{Latex[length=3mm]}, dashed}}
      \pgfplotscreateplotcyclelist{curvestylelist}{%
        firstcurve\\%
        secondcurve\\%
      }
      \pgfplotsset{openclosed/.style={{Circle[fill=white, length=2mm]}-{Circle[length=2mm]}, shorten >=-1mm, shorten &lt;=-1mm}}
      \pgfplotsset{open/.style={{Circle[fill=white, length=2mm]}-{Circle[fill=white, length=2mm]}, shorten >=-1mm, shorten &lt;=-1mm}}
      \pgfplotsset{closed/.style={{Circle[length=2mm]}-{Circle[length=2mm]}, shorten >=-1mm, shorten &lt;=-1mm}}
      \pgfplotsset{closedopen/.style={{Circle[length=2mm]}-{Circle[fill=white, length=2mm]}, shorten >=-1mm, shorten &lt;=-1mm}}
      \pgfplotsset{openarrow/.style={{Circle[fill=white, length=2mm]}-{Latex[length=3mm]}, shorten &lt;=-1mm}}
      \pgfplotsset{closedarrow/.style={{Circle[length=2mm]}-{Latex[length=3mm]}, shorten &lt;=-1mm}}
      \pgfplotsset{arrowopen/.style={{Latex[length=3mm]}-{Circle[fill=white, length=2mm]}, shorten >=-1mm}}
      \pgfplotsset{arrowclosed/.style={{Latex[length=3mm]}-{Circle[length=2mm]}, shorten >=-1mm}}
      \pgfplotsset{soliddot/.style   = {color=first, mark=*, only marks}}
      \pgfplotsset{hollowdot/.style  = {color=first, mark=*, only marks, fill=white}}
      <!-- Default Graph Style -->
      \pgfplotsset{every axis/.append style={
        framedaxes,
        xlabel = {\(x\)},
        ylabel = {\(y\)},
        xmin = -8,
        xmax = 8,
        ymin = -8,
        ymax = 8,
        domain = -8:8,
        xtick = {-6,-4,...,6},
        ytick = {-6,-4,...,6},
        minor xtick = {-7,...,7},
        minor ytick = {-7,...,7},
        cycle list name = curvestylelist,
        grid = both,
        grid style = {solid,gray!40},
        width = 270pt
    }}
  </latex-image-preamble>

